.card.mt-2
  .card-header
    アカウントの更新
  .card-body
    = simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f|
      .form-inputs
        = f.input :email, required: true, autofocus: true
        - if devise_mapping.confirmable? && resource.pending_reconfirmation?
          %p メールアドレスの確認が完了していません: #{resource.unconfirmed_email}
        = f.input :name, required: true
        = f.input :password, required: false, input_html: { autocomplete: 'new-password' },
                  hint: 'パスワードを変更しない場合は空欄のままにしてください'
        = f.input :password_confirmation, required: false, input_html: { autocomplete: 'new-password' }
        = f.input :current_password, required: true, input_html: { autocomplete: 'current-password' },
                  hint: '変更を確認するには、現在のパスワードが必要です'
      .form-actions
        = f.button :submit, '更新', class: 'btn btn-primary btn-block'
        = link_to '戻る', :back, class: 'btn btn-outline-primary btn-block'

.card.mt-2
  .card-header
    アカウントの削除
  .card-body
    = link_to 'アカウントを削除する', registration_path(resource_name), method: :delete, class: 'btn btn-secondary btn-block',
              data: { confirm: '本当に削除しますか？' }

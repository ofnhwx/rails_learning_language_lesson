= simple_form_for [:admin, teacher] do |f|
  - if teacher.image.attached?
    = image_tag teacher.image
  = f.input :image, as: :file
  = f.input :name
  = f.input :profile
  = f.association :languages
  = f.input :email
  = f.input :password
  = f.input :password_confirmation
  = f.button :submit, class: 'btn btn-primary'
  = link_to 'キャンセル', admin_teachers_path, class: 'btn btn-outline-primary'

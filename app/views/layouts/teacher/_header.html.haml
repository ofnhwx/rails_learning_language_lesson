%header.bg-primary
  .container
    %nav.navbar.navbar-dark.navbar-expand-lg
      = link_to 'Online Language Lesson', teacher_root_path, class: 'navbar-brand'
      %button.navbar-toggler{ type: 'button',
                              data: { toggle: 'collapse', target: '#navbar' },
                              aria: { controls: 'navbar', expanded: 'false', label: 'Toggle navigation' }}
        %span.navbar-toggler-icon
      #navbar.collapse.navbar-collapse
        %ul.navbar-nav.ml-auto
          - if teacher_signed_in?
            %li.nav-item= active_link_to 'レッスン一覧', teacher_lessons_path, class: 'nav-link'
            %li.nav-item= active_link_to 'プロフィール', edit_teacher_profile_path, class: 'nav-link'
            %li.nav-item= active_link_to 'ログアウト', destroy_teacher_session_path, class: 'nav-link', method: :delete
          - else
            %li.nav-item= active_link_to 'ログイン', new_teacher_session_path, class: 'nav-link'
